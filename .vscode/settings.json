{
  "mcp.filesystem.allowedDirectories": [
    "${workspaceFolder}"
  ],
  "mcp": {
    "servers": {
      "filesystem": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-filesystem",
          "${workspaceFolder}"
        ]
      },
      "sqlite": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-sqlite",
          "--db-path",
          "${workspaceFolder}/data/sample.db"
        ]
      }
    }
  },
  "dataworkspace.excludedProjects": [
    "sample db/sample db.sqlproj"
  ]
}